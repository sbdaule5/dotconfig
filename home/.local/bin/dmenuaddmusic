#!/bin/bash

# This script will use ytfzf to scrape youtube for the text entered and add url
# to mpd queue

addmusic(){
    ytlink="$1"
    yt-dlp -g -f bestaudio "$ytlink" | xargs mpc insert
    title=$(yt-dlp -e "$ytlink")
    thumbnail_url=$(yt-dlp --get-thumbnail "$ytlink")
    curl "$thumbnail_url" -o /tmp/mpc-thumbnail.webp
    notify-send -a "mpd" "$title" "Added to mpd playlist" -i /tmp/mpc-thumbnail.webp
}

if [[ -z $1 ]]; then
    ytlink=$(ytfzf -DL)
    addmusic "$ytlink"
elif [[ $1 == "-l" ]]; then
    if [[ -z $2 ]]; then
        echo "No url provided"
    else
        addmusic $2
    fi
else
    ytlink=$(ytfzf -L $1)
    addmusic "$ytlink"
fi
